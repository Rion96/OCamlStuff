# Bubble sort for interpreter.ml

FUN PRINTARRAY A N
    FOR LET I 0; I < N; I++
        PRINT A[I]
        PRINT " "
    ENDFOR
    PRINTLN ""
ENDFUN

FUN BUBBLE A N
    FUN VERIF A N
        FOR LET I 0; I < (N - 1); I++
            IF A[I] > A[I + 1]
                RETURN FALSE
            ENDIF
        ENDFOR
        RETURN TRUE
    ENDFUN
    WHILE !(VERIF A N)
        FOR LET I 0; I < (N - 1); I++
            IF A[I] > A[I + 1]
                LET TMP A[I + 1]
                LET A[I + 1] A[I]
                LET A[I] TMP
            ENDIF
        ENDFOR
    ENDWHILE
ENDFUN

LET N 16
LET X ARR N

FOR LET I 0; I < N; I++
    LET X[I] (N - I)
ENDFOR

PRINTARRAY X N
BUBBLE X N
PRINTARRAY X N