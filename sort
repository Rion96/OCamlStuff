# Bubble sort for interpreter.ml

FUN PRINTARRAY
    LET I 0
    WHILE I < N
        PRINT X[I]
        PRINT " "
        I++
    ENDWHILE
    PRINTLN ""
ENDFUN

FUN BUBBLE
    FUN VERIF
        LET I 0
        WHILE I < (N - 1)
            IF X[I] > X[I + 1]
                RETURN TRUE
            ENDIF
            I++
        ENDWHILE
        RETURN FALSE
    ENDFUN
    WHILE VERIF
        LET I 0
        WHILE I < (N - 1)
            IF X[I] > X[I + 1]
                LET TMP X[I + 1]
                LET X[I + 1] X[I]
                LET X[I] TMP
            ENDIF
            I++
        ENDWHILE
    ENDWHILE
    PRINTARRAY
ENDFUN

LET N 16
LET I 0
LET X ARR N

WHILE I < N
    LET X[I] (N - I)
    LET I (I + 1)
ENDWHILE

PRINTARRAY
BUBBLE