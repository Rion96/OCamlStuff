# Test script for interpreter.ml

LET V 5 # This is a comment!
LET W "World!"
# This is also a comment!
P 123
P V + 5 - 1
P 1 + 3 - 1 + V + 1
P 1 + (-2)
P 2 * (1 + 2)
LET X (-2) * (-1)
LET Y 14
P Y / X
P "Hello " + W
P 5 % 2
P X < Y
P !(TRUE) || !(43 < 2)
LET T TRUE
P !T
IF 1 + 1 = 2
  P "Duh!"
  LET ANS 1 + 1
  P "1 + 1 is:"
  P ANS
  IF TRUE
    P "Yup!"
  ELSE
    P "LOL"
  ENDIF
ELSE
  P "Wait... what?"
  IF TRUE
    P "Bla"
  ENDIF
ENDIF

LET X 1
WHILE X <= 10
  P "Looping..."
  P X
  LET X X + 1
ENDWHILE